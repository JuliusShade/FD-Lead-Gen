# --- RapidAPI (Indeed) ---
RAPIDAPI_KEY=
RAPIDAPI_HOST=indeed-scraper-api.p.rapidapi.com
INDEED_BASE_URL=https://indeed-scraper-api.p.rapidapi.com
INDEED_JOB_PATH=/api/job
INDEED_POLL_PATH=/api/job/{jobId}

# Pagination tuning
PAGE_PARAM=page
PAGE_START=1
PAGE_SIZE=15
MAX_PAGES=10

# Aurora DB
DB_ENGINE=postgres
DB_HOST=
DB_PORT=5432
DB_DATABASE=
DB_USERNAME=
DB_PASSWORD=
DB_SSL=true

# --- OpenAI (for job scoring) ---
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
OPENAI_TIMEOUT_SEC=30

# --- Apollo.io (for HR contact sourcing) ---
APOLLO_IO_API_KEY=
