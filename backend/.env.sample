APOLLO_PEOPLE_SEARCH_URL=https://api.apollo.io/api/v1/mixed_people/search

# --- Qualifier runtime ---
QUALIFY_SCORE_THRESHOLD=80
HR_SEARCH_PER_PAGE=10
HR_SEARCH_MAX_TITLES=12
RATE_LIMIT_SLEEP_SEC=0.5
